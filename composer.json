{
    "name": "faraday-motion/flarum-faraday-motion-oauth",
    "description": "This allows a user to authenitcate to flarum with a Faraday Motion account",
    "type": "flarum-extension",
    "version": "master",
    "require": {
        "flarum/core": "^0.1.0-beta.6",
        "league/oauth2-client": "~1.4"
    },
    "autoload": {
        "psr-4": {
            "Flarum\\Auth\\FaradayMotion\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "FM oAuth",
            "icon" : {
                "name" : "FM oAuth",
                "backgroundColor" : "#74e409",
                "color" : "#eee"
            }
        }
    }
}